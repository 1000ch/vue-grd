
{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "lib"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
